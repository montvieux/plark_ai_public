FROM ubuntu:18.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get -y update \
    && apt-get -y install \
    python3.6 \
    python3-pip \
    python3.6-tk \
    wget \
    libfontconfig1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libxi6 libgconf-2-4 -y \
    unzip \
    xvfb \
    libopenmpi-dev \
    zlib1g-dev \
    wait-for-it

RUN ln -sfn /usr/bin/pip3 /usr/bin/pip
RUN ln -sfn /usr/bin/python3.6 /usr/bin/python
RUN pip install robotframework==3.1.2
RUN pip install robotframework-seleniumlibrary==4.3.0

RUN wget --no-verbose -O /tmp/chrome.deb https://dl.google.com/linux/chrome/deb/pool/main/g/google-chrome-stable/google-chrome-stable_97.0.4692.71-1_amd64.deb \
  && apt install -y /tmp/chrome.deb \
  && rm /tmp/chrome.deb

RUN apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set up Chromedriver Environment variables
ENV CHROMEDRIVER_DIR /chromedriver
RUN mkdir -p $CHROMEDRIVER_DIR

# Download and install Chromedriver
RUN wget -q --continue -P $CHROMEDRIVER_DIR "http://chromedriver.storage.googleapis.com/97.0.4692.71/chromedriver_linux64.zip"
RUN unzip $CHROMEDRIVER_DIR/chromedriver* -d $CHROMEDRIVER_DIR
RUN chmod +x $CHROMEDRIVER_DIR/chromedriver

# Put Chromedriver into the PATH
ENV PATH $CHROMEDRIVER_DIR:$PATH

ADD plark_robot_tests /plark_robot_tests
# set working directory
WORKDIR /
CMD wait-for-it 172.20.128.2:5000 -- robot -d /plark_robot_tests/results /plark_robot_tests/Tests/Plark.robot


